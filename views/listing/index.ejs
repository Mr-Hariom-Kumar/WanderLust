<%layout("./layouts/boilerplate")-%>

    <h3>List of venues</h3>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1" >
        <%for(listing of allListing){%>
            <a href="/listing/<%=listing.id%>" class="listing-link">
                <div class="card listing-card" >
                    <img src="<%=listing.image%>" class="card-img-top" alt="Listing Image" style="height: 20rem;">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                        <p class="card-text">
                            <b><%=listing.title%></b><br>
                            &#x20B9;<%=listing.price.toLocaleString("en-IN")%>/night
                        </p>
                    </div>
                </div>
            </a>
        <%}%>
    </div>
